{
  "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
  "plugins": {
    "release-it-pnpm": {},
    "@release-it-plugins/workspaces": true
  },
  "npm": {
    "publish": false
  },
  "git": {
    "requireCleanWorkingDir": false,
    "commitMessage": "chore: release ${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": false
  }
}
