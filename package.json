{
  "name": "@kapo/i18n-transformer",
  "version": "0.0.1-beta.2",
  "description": "An automatic i18n conversion Vite/Webpack plugin.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/shared",
    "packages/vite-plugin",
    "packages/webpack-plugin"
  ],
  "scripts": {
    "build": "pnpm run clear && rollup -c",
    "release": "pnpm run build && release-it",
    "clear": "pnpm -r --filter=./packages/** run clear",
    "lint": "eslint . -c ./eslint.config.mjs"
  },
  "keywords": [
    "vite-plugin",
    "rollup-plugin",
    "i18n",
    "auto-i18n"
  ],
  "author": "Banana-energy",
  "license": "MIT",
  "release-it": {
    "plugins": {
      "release-it-pnpm": {}
    },
    "git": {
      "requireCleanWorkingDir": false,
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^22.7.2",
    "eslint": "^8.57.1",
    "eslint-plugin-import-x": "^4.3.1",
    "globals": "^15.9.0",
    "release-it": "^17.7.0",
    "release-it-pnpm": "^4.6.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.22.5",
    "rollup-plugin-ts": "^3.4.5",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  }
}
