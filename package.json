{
  "name": "@kapo/i18n-transformer",
  "version": "1.0.17",
  "description": "An automatic i18n conversion Vite/Webpack plugin.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/shared",
    "packages/vite-plugin",
    "packages/webpack-plugin"
  ],
  "scripts": {
    "build": "pnpm run clear && rollup -c",
    "release": "pnpm run build && release-it --only-version",
    "clear": "pnpm -r --filter=./packages/** run clear",
    "lint": "eslint . -c ./eslint.config.mjs"
  },
  "keywords": [
    "vite-plugin",
    "rollup-plugin",
    "i18n",
    "auto-i18n"
  ],
  "author": "Banana-energy",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.25.9",
    "@babel/plugin-transform-optional-chaining": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.16.0",
    "@release-it-plugins/workspaces": "^4.2.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@types/node": "^22.10.1",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "release-it": "^17.10.0",
    "release-it-pnpm": "^4.6.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.28.1",
    "rollup-plugin-ts": "^3.4.5",
    "typescript": "^5.7.2",
    "@antfu/eslint-config": "^3.12.0"
  }
}
