{
  "include": [
    "packages"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "."
  }
}
