{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@higgins-mmt/*": ["packages/*/src"]
    }
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}
